<!--index.wxml-->

<view class='all-container' wx:if="{{showNormal}}">
  <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
    <block wx:for="{{imgUrls}}">
      <swiper-item>
        <image src="{{item}}" class="slide-image"/>
      </swiper-item>
    </block>
  </swiper>
  <view class="container" bindtouchmove="hiddenComment">
    <view class='nav-bar-container'>
      <view class='nav-bar'>
        <view class='all {{select==1?"selected":""}}' bindtap="selected" data-type="1">全部</view>
        <view class='follow {{select==2?"selected":""}}' bindtap="selected" data-type='2'>关注</view>
        <view class='new {{select==3?"selected":""}}' bindtap="selected" data-type='3'>最新</view>
        <view class='hot {{select==4?"selected":""}}' bindtap="selected" data-type='4'>最热</view>
      </view>
    </view>
    <view class='message-tip' wx:if="{{newMessage}}" bindtap='openMessage'>
      <view class='tip-content'>
        <view>远方飘来{{newMessageNumber}}条新消息</view>
        <view>
          <image src='/image/qiqiu.png'></image>
        </view>
      </view>
    </view>
    <view class="container-wall">
      <view class='topic-container' wx:if="{{showTopic}}">
        <view class='topic'>
          <view class='title'>
            <view class='title-world'>#今日话题#</view>
          </view>
          <view class='content'>{{topic.content}}</view>
          <view class='attachments'>
            <view class="attachments-single-image" wx:if='{{topic.attachments.length==1}}'>
              <image mode="aspectFill" class="image-item" wx:for="{{topic.attachments}}" wx:key="{{topic.attachments}}" src="{{baseImageUrl+item}}" id="{{baseImageUrl+item}}" bindtap='previewImage' id=""></image>
            </view>
            <view class='attachments-more-image' wx:if='{{topic.attachments.length>1}}'>
              <image mode="aspectFill" class="image-item" wx:for="{{topic.attachments}}" wx:key="{{topic.attachments}}" src="{{baseImageUrl+item}}" bindtap='previewImage' id="{{baseImageUrl+item}}"></image>
            </view>
          </view>

          <view class='footer'>
            <view class='footer-praise' data-id="{{topic.id}}" bindtap='praiseTopic'>
              <image src='/image/topic_praise.png'></image>
              <view> {{topic.praise_number}}</view>
            </view>
            <view class='footer-visit'>
              <image src='/image/topic_view.png'></image>
              <view> {{topic.view_number}}</view>
            </view>
            <view bindtap='openTopic' data-id="{{topic.id}}" class='footer-comment'>
              <image src='/image/topic_comment.png'></image>
              <view> {{topic.comment_number}}</view>
            </view>
          </view>

        </view>
      </view>

      <view class="wall-item" wx:for="{{posts}}" wx:key="{{posts}}">
        <view class="item-container">
          <view class="item-image">
            <image bindtap='previewImage' id="{{item.poster.avatar}}" src="{{item.poster.avatar}}" wx:if="{{item.private == 0}}"></image>
            <image bindtap='previewImage' src="/image/boy.png" wx:elif="{{item.private == 1 && item.poster.gender == 1}}"></image>
            <image bindtap='previewImage' src="/image/girl.png" wx:else></image>
          </view>
          <view class="item-content">
            <view class="user-name">
              <view wx:if="{{item.private == 0}}">
                {{item.poster.nickname}}
              </view>
              <view wx:if="{{item.private == 1}}">匿名の同学</view>
              <view class='follow-icon' wx:if="{{!item.follow}}">
                <view class='follow-world' data-obj="{{item.id}}" bindtap="follow">关注</view>
              </view>
              <view class='had-follow' wx:if="{{item.follow}}">
                <view bindtap="cancelFolllow" data-obj="{{item.id}}" class='had-follow-world'>取消关注</view>
              </view>
            </view>
            <view class='for-user' wx:if="{{item.topic != '无'}}">
              @#{{item.topic}}#
            </view>
            <view class="content" wx:if="{{item.content}}">{{item.content}}</view>
            <view class="single-image" wx:if='{{item.attachments.length==1}}'>
              <image mode="widthFix" class="image-item" wx:for="{{item.attachments}}" wx:key="{{item.attachments}}" src="{{baseImageUrl+item}}" bindtap='previewImage' id="{{baseImageUrl+item}}"></image>
            </view>
            <view class='more-image' wx:if='{{item.attachments.length>1}}'>
              <image mode="aspectFill" class="image-item" wx:for="{{item.attachments}}" wx:key="{{item.attachments}}" wx:for-item="sitem" src="{{baseImageUrl+sitem}}" bindtap='previewMoreImage' data-obj="{{item.attachments}}" id="{{baseImageUrl+sitem}}"></image>
            </view>
            <view class='user-college' wx:if="{{item.show_college}}">
              <view>{{item.college}}</view>
            </view>
            <view class="post-time">
              <view class='time-and-delete'>
                <view>{{item.created_at}}</view>
                <view class='delete-post' id="{{item.id}}" wx:if="{{item.can_delete}}" bindtap='deletePost'>删除</view>
              </view>
              <view class='comment-container'>
                <view class='comment-icon' wx:if="{{item.id==show}}">
                  <image src='/image/zan.png' style='width:60rpx;height:60rpx' data-obj="{{item.id}}" bindtap='praise'></image>
                  <image src='/image/letter1.png' style='width:60rpx;height:60rpx' bindtap='letter' data-obj="{{item.poster.id}}" data-chat="{{item.private}}"></image>
                  <image src='/image/pinglun.png' bindtap='showCommentInput' data-objid="{{item.id}}" data-objtype='1'></image>
                </view>
                <view class='comment-icon-container'>
                  <image style='width:45rpx;height:45rpx' src="/image/comment.png" bindtap="showComment" id="{{item.id}}" data-show="{{hidden}}">
                  </image>
                </view>
              </view>
            </view>
            <view class="comment" wx:if="{{item.praises.length > 0 || item.comments.length > 0}}">
              <view class="qipao"></view>
              <view class="comment-detail">
                <view class="praise-container" wx:if="{{item.praises.length > 0}}">
                  <view class='praise-content'>
                    <image class='praise-user praise-item' src='/image/make_praise.png'></image>
                    <view class='praise-item' wx:for="{{item.praises}}" wx:key="{{item.praises}}">
                      <view class='praise-item-sub'>
                        <view>
                          <image class='praise-user-avatar' src='{{item.avatar}}'></image>
                        </view>
                        <view class='praise-user-name'>
                          {{item.nickname}}
                        </view>
                      </view>
                    </view>
                  </view>
                </view>
                <view class='line' wx:if="{{item.comments.length > 0 && item.praises.length > 0}}">
                </view>
                <view class='comment-user-wall' wx:if='{{item.comments.length > 0}}'>
                  <view class='comment-user-container' wx:for="{{item.comments}}" wx:key="{{item.comments}}" wx:for-item="sub">
                    <view class='comment-wall-item' bindtap="{{sub.can_delete?'deleteComment':'commentOtherComment'}}" data-objid="{{item.id}}" data-refid="{{sub.id}}" data-objtype='1'>

                      <view class='comment-user-container' wx:if="{{!sub.ref_comment}}">
                        <view class="comment-user inline-item">
                          {{sub.commenter.nickname}}:
                        </view>
                        <view class='inline-item'>{{sub.content}}</view>
                      </view>

                      <view class='comment-user-container' wx:if="{{sub.ref_comment}}">
                        <view class="comment-user inline-item">
                          {{sub.commenter.nickname}}
                        </view>
                        <view class="inline-item">回复</view>
                        <view class="comment-user inline-item">
                          {{sub.ref_comment.refCommenter.nickname}}:
                        </view>
                        <view class='inline-item'>{{sub.content}}</view>
                      </view>

                    </view>
                  </view>
                </view>
              </view>
            </view>
          </view>
        </view>
      </view>

    </view>

    <view class='get-more' wx:if="{{showGeMoreLoadin}}">
      <view class='get-more-item'>
        <image src='/image/get-more.gif' mode='aspectFit'></image>
        <view class='loading'>加载中</view>
      </view>
    </view>

    <view class='no-more-data' wx-if="{{notDataTips && posts.length != 0}}">
      <view>我是一只有底线的神~_~</view>
    </view>

    <view class='no-more-data' wx-if="{{posts.length == 0}}">
      <view class='power_by'>喜欢就多多分享吧！</view>
    </view>

  </view>

  <view class='post-container' wx:if="{{showNormal}}">
    <view class='post'>
      <image src='/image/post.png' bindtap='post'></image>
    </view>
  </view>

  <view class='comment-input-container' wx:if="{{showCommentInput}}">
    <textarea placeholder="评论" auto-focus maxlength="1024" cursor-spacing="15" fixed="true" auto-height bindinput='getCommentContent' />
    <view class='send-button' bindtap='sendComment'>
      <view>发送</view>
    </view>
  </view>
</view>

<view wx:if="{{show_auth}}" class='auth-container'>
  <view class='auth-wall'>
    <button open-type="getUserInfo" bindgetuserinfo="getAuthUserInfo" class='auth-button'>
      <view class='auth-image-container'>
        <image src='/image/wx_log.png'></image>
      </view>
      <view>授权登录</view>
    </button>
  </view>
</view>

<view class='container' wx:if="{{showAudit}}">

  <view class='header'>
    <view class='tips'>试试你跟Ta有没有情侣相吧</view>
  </view>

  <view class='image-container' wx-if="{{showSelect}}">
    <view class='image-left' bindtap='selectLeft'>
      <view class='image' wx:if="{{!imageLeft}}">
        <image class='add-button-image' src='/image/add-photo.png'></image>
      </view>
      <view class='image' wx:if="{{imageLeft}}">
        <image class='avatar' mode='aspectFit' src='{{imageLeft}}'></image>
      </view>
    </view>
    <view class='image-right' bindtap='selectRight'>
      <view class='image' wx:if="{{!imageRight}}">
        <image class='add-button-image' src='/image/add-photo.png'></image>
      </view>
      <view class='image' wx:if="{{imageRight}}">
        <image class='avatar' mode='aspectFit' src='{{imageRight}}'></image>
      </view>
    </view>
  </view>

</view>

<view class='report' wx-if="{{showReport}}">
  <view class='bind-report' wx-if="{{bindReport}}">
    <image src='/image/bind-face-report.png'></image>
  </view>
  <view class='content'>
    <view class='report-title'>
      <view>检测报告</view>
    </view>
    <view class='report-main'>
      <view class='rate report-item'>相似度：
        <view class='rate-world'>{{rate}}%</view>
      </view>
      <view class='face report-item'>脸型：{{face}}</view>
      <view class='description report-item'>结论：{{conclusion}}</view>
      <view class='seal-world'>{{face}}</view>
      <view class='seal'>
        <image src='/image/seal.png'></image>
      </view>
      <view class='support'>阿里AI提供技术支持</view>
    </view>
  </view>
</view>

<view class='ding-container' wx:if="{{showAudit}}">
  <image src='/image/ding.png'></image>
</view>

<view class='beging' bindtap='showSelect' wx-if="{{showBegin}}">
  <view class='beging-button' wx:if="{{showAudit}}">开始</view>
</view>

<view class='beging' bindtap='cancelSelect' wx-if="{{showCancel}}">
  <view class='beging-button'>取消</view>
</view>

<view class='beging' bindtap='submit' wx-if="{{showSubmit}}">
  <view class='beging-button'>提交</view>
</view>

<view class='beging' bindtap='tryAgant' wx-if="{{tryAgant}}">
  <view class='beging-button'>再来一次</view>
</view>