page{
  background: #F5F5F5;
}

.container{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.content-container{
  margin-top: 70rpx;
}

.container .content{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.content .content-item{
  width: 100%;
  display: flex;
  flex-direction: column;
  background: white;
  margin-top: 20rpx;
}

.content-item .header{
  width: 100%;
  display: flex;
  flex-direction: column;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  border-bottom-style:solid;
  border-width:1rpx;
  border-color: #F5F5F5;
  align-items: center;
}

.header .header-content{
  width: 95%;
  display: flex;
  flex-direction: row;
}

.header .avatar{
  width: 13%;
  display: flex;
  flex-direction: row;
}

.avatar image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
}

.header .nickname{
  display: flex;
  flex-direction: column;
}

.nickname .name{
  color: #1874CD;
}

.nickname .time{
  font-size: 30rpx;
  color: gray;
}

.content-item .content{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.content .title{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
  margin-bottom: 15rpx;
}

.title .label{
  padding-bottom: 10rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
  padding-top: 10rpx;
  background-color: #F5F5F5;
  color: #7A7A7A;
  border-radius: 10rpx;
}

.content .salary{
  width: 100%;
  display: flex;
  flex-direction: row;
}

.content .mission{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.mission .description{
  width: 95%;
  display: flex;
  flex-direction: column;
}

.content .salary{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.salary .container{
  width: 95%;
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
}

.salary .money{
  color: red;
}

.content .footer{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 20rpx;
  border-top-style:solid;
  border-width:1rpx;
  border-color: #F5F5F5;
  padding-top: 15rpx;
  padding-bottom: 15rpx;
  font-size: 35rpx;
}

.footer .order{
  border-right-style:solid;
  border-width:1rpx;
  border-color: #F5F5F5;
  width: 50%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 50rpx;
  color: #66CDAA;
}

.order image{
  width: 40rpx;
  height: 40rpx;
  padding-right: 8rpx;
}

.footer .contact{
  width: 50%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  color: #1296db;
}

.contact image{
  width: 45rpx;
  height: 45rpx;
  padding-right: 8rpx;
}

/**post css**/

.post-container{
  position:fixed;
  right:18rpx;
  bottom:5rpx;
  z-index:100;
  width: 120prx;
  height: 120prx;
}

.post image{
  width: 120rpx;
  height: 120rpx;
}

/** nav-bar **/

.nav-bar-container{
  width: 100%;
  height: 70rpx;
  align-items: center;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  border-bottom-style:solid;
  border-width:5rpx;
  border-color: white;
  background: white;
  position: fixed;
}

.nav-bar-container .nav-bar{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 95%;
  font-weight: 200;
  font-size: 35rpx;
  margin-top: 5rpx;
  margin-bottom: 5rpx;
}

.nav-bar .selected{
  color: #FF4500;
}

.image-container{
  width: 95%;
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
}

.single-image image{
  width: 500rpx;
}

.more-image{
  display: flex;
  flex-direction: row;
  flex-wrap:wrap;
}

.more-image image{
  width: 225rpx;
  height: 225rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}


/** 加载更多 **/

.get-more{
  height: 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  font-size: 30rpx;
  font-weight: 200;
  width: 100%;
  background: white;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.get-more image{
  width: 40rpx;
  height: 40rpx;
}

.get-more .get-more-item{
  display: flex;
  flex-direction: row;
}

.loading{
  margin-left: 15rpx;
}

.no-more-data{
  width: 100%;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  justify-content: space-around;
  align-items: center;
  font-size: 25rpx;
  font-weight: 200;
  text-align: center;
  color: darkgray;
}

.form-item{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.form-item .button{
  background: none !important;
  color: #66CDAA;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 35rpx;
}
.button::after{
  border: none;
}